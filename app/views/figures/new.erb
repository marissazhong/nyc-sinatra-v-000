<h1>Create A New Figure:</h1>

<form action="/figures" method="POST">
  <label>Figure Name: </label><input type="text" name="figure[name]" id="figure_name">

  <h4>Titles: </h4>
  <% Title.all.each do |title| %>
    <%=title.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"></input><br />
  <% end %>

  <h4>Create New Title: </h4>
  <input type="text" name="title[name]" id="new_title"></input>

  <h4>Landmarks: </h4>
  <% Landmark.all.each do |landmark| %>
    <%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"></input><br />
  <% end %>

  <h4>Create New Landmark: </h4>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year"></input>
  <br></br>

  <input type="submit" value="Create New Figure">
</form>
