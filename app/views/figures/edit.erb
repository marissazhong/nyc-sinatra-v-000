<h1>Edit A Figure:</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Figure Name: </label><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name%>">

  <h4>Edit Titles: </h4>
  <% Title.all.each do |title| %>
    <%=title.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>></input><br />
  <% end %>

  <h4>Create New Title: </h4>
  <input type="text" name="title[name]" id="new_title"></input>

  <h4>Edit Landmarks: </h4>
  <% Landmark.all.each do |landmark| %>
    <%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>></input><br />
  <% end %>

  <h4>Create New Landmark: </h4>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
 <br></br>

  <input type="submit" value="Edit Figure">
</form>
